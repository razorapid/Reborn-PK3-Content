/** DISCONNECTION EVENT SCRIPT */

main local.player:
	if (level.eventSys) {
		for (local.i = 0; local.i < level.eventSys.list["disconnected"].size; local.i++) {
			if (typeof level.eventSys.list["disconnected"][local.i] == "const array") {
				thread level.eventSys.list["disconnected"][local.i] local.player;
			} else {
				exec level.eventSys.list["disconnected"][local.i] local.player;
			}
		}
	}
end;